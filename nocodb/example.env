# Domain Configuration
DOMAIN_NAME=orgops.io
SUBDOMAIN=db

# PostgreSQL Configuration
POSTGRES_DB=nocodb
POSTGRES_USER=nocodb
POSTGRES_PASSWORD=nocodb_secure_password

# Redis Configuration
REDIS_PASSWORD=redis_secure_password

# NocoDB Authentication (MANDATORY - CHANGE THESE!)
NC_AUTH_JWT_SECRET=your-very-secure-jwt-secret-min-32-chars
NC_JWT_EXPIRES_IN=10h

# NocoDB Admin User
NC_ADMIN_EMAIL=admin@orgops.io
NC_ADMIN_PASSWORD=Admin123!@#

# Security Keys (CHANGE THESE!)
NC_CONNECTION_ENCRYPT_KEY=your-32-character-encryption-key-here

# Storage Settings
NC_ATTACHMENT_FIELD_SIZE=20971520
NC_MAX_ATTACHMENTS_ALLOWED=10
NC_SECURE_ATTACHMENTS=false
NC_ATTACHMENT_EXPIRE_SECONDS=7200

# Email Configuration (Optional but recommended)
NC_SMTP_FROM=noreply@orgops.io
NC_SMTP_HOST=smtp.example.com
NC_SMTP_PORT=587
NC_SMTP_USERNAME=
NC_SMTP_PASSWORD=
NC_SMTP_SECURE=false

# Product Configuration
NC_INVITE_ONLY_SIGNUP=false
NC_DISABLE_AUDIT=false
NC_DISABLE_TELE=false

# S3 Storage (Optional - for attachments)
# NC_S3_BUCKET_NAME=
# NC_S3_REGION=
# NC_S3_ACCESS_KEY=
# NC_S3_ACCESS_SECRET=
