# PostgreSQL Datenbank Konfiguration
PG_PASS=your-secure-database-password-here
PG_USER=authentik
PG_DB=authentik

# Authentik Secret Key (mindestens 50 Zeichen)
# Generiere mit: openssl rand -base64 60 | tr -d '\n'
AUTHENTIK_SECRET_KEY=your-secret-key-at-least-50-characters-long

# SMTP Konfiguration für E-Mail-Versand
# Wird benötigt für: Password-Reset, E-Mail-Verifikation, Benachrichtigungen
AUTHENTIK_EMAIL__HOST=smtp.example.com
AUTHENTIK_EMAIL__PORT=587
AUTHENTIK_EMAIL__USERNAME=authentik@example.com
AUTHENTIK_EMAIL__PASSWORD=your-smtp-password
AUTHENTIK_EMAIL__USE_TLS=true
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__TIMEOUT=10
AUTHENTIK_EMAIL__FROM=authentik@orgops.io

# Optionale Einstellungen

# Error Reporting an sentry.io (opt-in)
AUTHENTIK_ERROR_REPORTING__ENABLED=false

# Startup Analytics deaktivieren (empfohlen für Produktiv)
AUTHENTIK_DISABLE_STARTUP_ANALYTICS=true

# Update-Check deaktivieren (optional)
AUTHENTIK_DISABLE_UPDATE_CHECK=false

# Log Level: debug, info, warning, error
AUTHENTIK_LOG_LEVEL=info

# Optionale Docker Image Overrides (falls Beta-Version gewünscht)
# AUTHENTIK_IMAGE=ghcr.io/goauthentik/server
# AUTHENTIK_TAG=2025.4.0
