# Domain Configuration
DOMAIN_NAME=orgops.io
SUBDOMAIN=newsletter

# PostgreSQL Configuration
POSTGRES_DB=keila
POSTGRES_USER=keila
POSTGRES_PASSWORD=keila_secure_password

# Keila Root User (CHANGE THESE!)
KEILA_ROOT_EMAIL=admin@orgops.io
KEILA_ROOT_PASSWORD=Admin123!@#Keila

# Security Keys (MANDATORY - Will be generated automatically)
SECRET_KEY_BASE=
HASHID_SALT=

# Deployment Configuration
DISABLE_REGISTRATION=false
DISABLE_PRECEDENCE_HEADER=false
LOG_LEVEL=info

# SMTP Configuration for System Emails (MANDATORY)
SMTP_FROM_EMAIL=noreply@orgops.io
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_ENABLE_SSL=false
SMTP_ENABLE_STARTTLS=true

# Captcha Configuration (Optional but recommended)
# Options: hcaptcha, friendly_captcha, or leave empty
CAPTCHA_PROVIDER=
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET_KEY=